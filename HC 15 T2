-- HC15T2 : SystÃ¨me basique de voiture autonome
-- RÃ©action aux feux tricolores

-- DÃ©finition des couleurs du feu
data Feu = Rouge | Orange | Vert
    deriving (Show)

-- Fonction de dÃ©cision de la voiture autonome
reactToFeu :: Feu -> String
reactToFeu Rouge  = "STOP ğŸš—âœ‹ : Le feu est rouge"
reactToFeu Orange = "RALENTIR ğŸš—âš ï¸ : Le feu est orange"
reactToFeu Vert   = "AVANCER ğŸš—ğŸ’¨ : Le feu est vert"

-- Simulation principale
main :: IO ()
main = do
    putStrLn "=== SystÃ¨me basique de voiture autonome ==="
    putStrLn "Choisissez la couleur du feu : rouge / orange / vert"

    couleur <- getLine

    let feu = case couleur of
                "rouge"  -> Just Rouge
                "orange" -> Just Orange
                "vert"   -> Just Vert
                _        -> Nothing

    case feu of
        Just f  -> putStrLn (reactToFeu f)
        Nothing -> putStrLn "âŒ Couleur inconnue. Veuillez entrer rouge, orange ou vert."
